{
   "compilerOptions": {
      "jsx": "react-jsx",
      "noImplicitAny": false,
      "removeComments": true,
      "preserveConstEnums": true,
      "sourceMap": true,
      "allowJs": true,
      "target": "es2016",
      "module": "commonjs",
      "checkJs": false,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "outDir": "build"
   },
   "include": ["src/**/*"],
   "exclude": ["node_modules", "build/**/*"]
}
